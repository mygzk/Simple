<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".model.stikkyheader.ListHeaderActivity">

    <LinearLayout
        android:id="@+id/below_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4CAF50"
        android:clickable="true"
        android:alpha="0.8"
        android:orientation="vertical">


        <TextView
            android:id="@+id/bg_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#8BC34A"
            android:gravity="center"
            android:text="bg_text"
            android:textColor="#fff" />


    </LinearLayout>






    <com.example.simple.model.stikkyheader.view.PullExtendLayout
        android:id="@+id/pull_extend"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--头部-->
        <com.example.simple.model.stikkyheader.view.ExtendMsgHeader
            android:id="@+id/extend_header"
            android:layout_width="match_parent"
            android:layout_height="460dp" />


        <TextView
            android:id="@+id/header_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="header view"
            android:background="@color/color_D9E4EE"
            android:gravity="center"
            />


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/list_test1"
            />

    </com.example.simple.model.stikkyheader.view.PullExtendLayout>



</FrameLayout>