<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.custonviewpager.TabViewpagerActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabView_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#faf7fa"
        app:tabIndicatorColor="#F00"
        app:tabIndicatorHeight="5dp"
        app:tabMinWidth="30dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#F00"
        app:tabTextColor="#1d1c1d" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tab_viewpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@+id/tabView_tab" />

</android.support.constraint.ConstraintLayout>