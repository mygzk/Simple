<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/dialog_btn_calcle"
            style="@style/comm_btn_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="取消"
            android:textColor="@color/front_3" />
    </RelativeLayout>

    <View
        android:id="@+id/btn_divider2"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_1"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/dialog_btn_sure"
            style="@style/comm_btn_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="确定"
            android:textColor="@color/front_4" />
    </RelativeLayout>

</LinearLayout>