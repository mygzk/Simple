<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 头部-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/dialog_select_address_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:src="@mipmap/icon_chahao" />

        <TextView
            android:id="@+id/dialog_select_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择地址"
            android:textColor="#282828"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/dialog_select_address_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="确定"
            android:textColor="#282828"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_theme_color_bg_all" />

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/dialog_select_address_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/smooth_text_cololr"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/smooth_text_cololr"
        app:tabTextColor="@color/color_282828" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_theme_color_bg_all" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_select_address_rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>