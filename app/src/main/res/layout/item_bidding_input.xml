<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bidding_toot"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff">

    <TextView
        android:id="@+id/item_bidding_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="办理企业"
        android:textColor="#282828"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_bidding_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/item_bidding_lable"
        android:layout_toLeftOf="@+id/item_bidding_right_img"
        android:layout_toRightOf="@+id/item_bidding_lable"
        android:layout_toStartOf="@+id/item_bidding_right_img"
        android:text="北京天成工程设计有限回公司"
        android:textColor="#4A4A4A"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/item_bidding_content_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/item_bidding_lable"
        android:layout_toLeftOf="@+id/item_bidding_right_img"
        android:layout_toRightOf="@+id/item_bidding_lable"
        android:layout_toStartOf="@+id/item_bidding_right_img"
        android:background="@null"
        android:text=""
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_bidding_right_img"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="#00123123" />

    <View
        android:id="@+id/item_bidding_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#F0F0F0" />


</RelativeLayout>